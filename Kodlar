 const xScale = d3.scaleLinear()
      .domain([0, d3.max(data, (d) => d.value)])
      .range([0, width - margin.left - margin.right]);

    // Barların yüksekliği sabit olacak ve barlar arasındaki mesafeyi kontrol edeceğiz
    const barHeight = 30;  // Barların yüksekliği
    const barSpacing = 10; // Barlar arasındaki mesafe

    // Y eksenindeki her barın pozisyonunu ve mesafesini hesaplıyoruz
    const yScale = d3.scaleLinear()
      .domain([0, data.length])
      .range([margin.top, height - margin.bottom - barHeight]);

    // X eksenini ekliyoruz
    svg.selectAll(".x-axis")
      .data([0])
      .enter().append("g")
      .attr("transform", `translate(${margin.left}, ${height - margin.bottom})`)
      .call(d3.axisBottom(xScale));

    // Y eksenini ekliyoruz
    svg.selectAll(".y-axis")
      .data([0])
      .enter().append("g")
      .attr("transform", `translate(${margin.left}, 0)`)
      .call(d3.axisLeft(yScale).tickFormat(() => "")); // Y eksenindeki değerleri gizliyoruz

    // Bar çubuklarını çiziyoruz
    svg.selectAll(".bar")
      .data(data)
      .enter()
      .append("rect")
      .attr("class", "bar")
      .attr("x", margin.left)
      .attr("y", (d, i) => yScale(i) + barSpacing * i) // Y ekseninde barların konumunu belirliyoruz
      .attr("width", (d) => xScale(d.value)) // X ekseninde barın genişliği
      .attr("height", barHeight) // Sabit bar yüksekliği
      .attr("fill", "steelblue");

    // Her barın sağına değerleri yazıyoruz
    svg.selectAll(".value")
      .data(data)
      .enter()
      .append("text")
      .attr("class", "value")
      .attr("x", (d) => margin.left + xScale(d.value) + 5) // Değerlerin sağında
      .attr("y", (d, i) => yScale(i) + barSpacing * i + barHeight / 2)
      .attr("dy", ".35em")
      .text((d) => d.value.toFixed(2)); // Değerleri gösteriyoruz
