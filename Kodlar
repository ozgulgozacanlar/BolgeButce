  // X eksenini ekliyoruz, ancak ticks'leri kaldırıyoruz
  const xAxis = d3.axisBottom(xScale)
    .ticks(0) // Hiç tick göstermiyoruz
    .tickValues([]); // Tick değerlerini sıfırlıyoruz, son tick'i kaldırmak için

  svg.selectAll(".x-axis")
    .data([0])
    .enter().append("g")
    .attr("transform", `translate(${margin.left}, ${height - margin.bottom})`)
    .call(xAxis);
