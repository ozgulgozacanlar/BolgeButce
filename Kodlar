    g.append("g")
      .attr("class", "y-axis")
      .call(d3.axisLeft(yScale).ticks(0)) // ticks(0) ile tick'leri kaldırıyoruz
      .selectAll(".tick line") // Y eksenindeki tick çizgilerini hedefliyoruz
      .remove(); // Tick çizgilerini kaldırıyoruz


    // Y ekseninin çizgisini beyaz yapıyoruz
    g.selectAll(".y-axis .domain")
      .attr("stroke", "white")  // Y ekseninin çizgilerini beyaz yapıyoruz
      .attr("stroke-width", 2);  // Çizgi kalınlığını ayarlıyoruz

    // Y eksenine paralel sabit bir path ekliyoruz
    const yAxisPosition = margin.left; // Y ekseninin başlangıç noktası
    const yAxisLength = height - margin.top - margin.bottom; // Y ekseninin uzunluğu

    // Y eksenine paralel bir path çizeceğiz
    g.append("path")
      .attr("class", "y-axis-path")
      .attr("d", `M${yAxisPosition},${margin.top} V${height - margin.bottom}`) // Y ekseninin başlangıç noktasından bitiş noktasına kadar dikey çizgi çizecek
      .attr("stroke", "white")  // Çizgi rengini beyaz yapıyoruz
      .attr("stroke-width", 2); // Çizgi kalınlığını ayarlıyoruz
