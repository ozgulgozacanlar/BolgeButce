
        bars.enter()
            .append("rect")
            .attr("class", "bar")
            .attr("x", 0) 
            .attr("y", (d) => yScale(d.name)) // Y konumunu name'e göre ayarlıyoruz
            .attr("width", (d) => xScale(d.value)) // X ekseni boyunca barın genişliği
            .attr("height", yScale.bandwidth()) // Y eksenindeki her barın yüksekliği
